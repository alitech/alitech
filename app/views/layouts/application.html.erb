										</li>
										<li>
											<a href="#">Cadastre sua ideia</a>
										</li>
										<li>
											<%= link_to "Produtos", produtos_path %>
										</li>
									</ul>
								</li>
							</ul>
						</div>
						<!-- /span3 -->
						<div class="span3">
							<h3>Receber Informativos</h3>
							<p>
								Assine a nossa newsletter!
							</p>
							<form>
								<input type="text" name="subscribe_email" placeholder="Seu Email" />
								<br />
								<button class="btn ">
									Assinar
								</button>
							</form>
						</div>
						<!-- /span4 -->

					</div>
					<!-- /row -->

				</div>
				<!-- /container -->

			</div>
			<!-- /inner -->

		</div>
		<!-- /extra -->

		<div id="footer">

			<div class="inner">

				<div class="container">

					<div class="row">
						<div id="footer-copyright" class="span4">
							&copy; 2012-2013 ALItech Inovação e Tecnologia L.T.D.A
