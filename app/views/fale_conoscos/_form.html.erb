<%= form_for(@fale_conosco) do |f| %>
<% if @fale_conosco.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@fale_conosco.errors.count, "error") %> prohibited this fale_conosco from being saved:</h2>

	<ul>
		<% @fale_conosco.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="controls controls-row">
	<%= f.label :nome, :class=>"span3" %>
	<%= f.label :empresa %>
	<%= f.text_field :nome, :class=>"span3" %>
	<%= f.text_field :empresa, :class=>"span3" %>
</div>
<div class="controls controls-row">
	<%= f.label :email, :class=>"span3" %>
	<%= f.label :telefone, :class=>"span3" %>
	<%= f.email_field :email, :class=>"span3" %>
	<%= f.telephone_field :telefone, :class=>"span3" %>
</div>
<div class="controls">
	<%= f.label :site %>
	<%= f.text_field :site, :size => "57" %>
</div>
<div class="controls controls-row">
	<%= f.label :cidade, :class=>"span3" %>
	<%= f.label :uf, :class=>"span3" %>
	<%= f.text_field :cidade, :class=>"span3" %>
	<%= f.text_field :uf, :class=>"span3" %>
</div>

<div class="controls">
	<%= f.label :assunto %>
	<%= f.text_field :assunto, :class=>"span3" %>
</div>
<div>
	<%= f.text_area :mensagem, :cols => "150", :rows => "5" , :placeholder=>"Mensagem" %>
</div>
<div class="modal-footer">
	<%= f.submit  'Enviar Mensagem', :class=>"btn btn-primary"%>
</div>
<% end %>
